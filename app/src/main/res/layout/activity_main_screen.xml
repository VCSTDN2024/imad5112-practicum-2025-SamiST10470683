<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list"
    android:gravity="center"
    tools:context=".MainScreen">

    <TextView
        android:id="@+id/MainScreenTitle"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Manage Songs"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp" />

    <EditText
        android:id="@+id/SongTitle"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:hint="Song Title"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFFFF"
        android:fontFamily="@font/poppins_light"
        android:textAlignment="center"
        android:textSize="20dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/MainScreenTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/ArtistName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:hint="Artist Name"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFFFF"
        android:fontFamily="@font/poppins_light"
        android:textAlignment="center"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/SongTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/Rating"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:hint="Rating (1-5)"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFFFF"
        android:fontFamily="@font/poppins_light"
        android:textAlignment="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ArtistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/Comments"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@drawable/edittext_background"
        android:hint="Comments"
        android:textColorHint="#9CFFFFFF"
        android:fontFamily="@font/poppins_light"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:lines="3"
        app:layout_constraintTop_toBottomOf="@id/Rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/AddPlaylist"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:fontFamily="@font/poppins_extralight"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="#25000000"
        android:text="Add to Playlist"
        app:layout_constraintTop_toBottomOf="@id/Comments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/DetailedView"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:fontFamily="@font/poppins_extralight"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="#25000000"
        android:text="View Playlist Details"
        app:layout_constraintTop_toBottomOf="@id/AddPlaylist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/ExitApp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#25000000"
        android:fontFamily="@font/poppins_extralight"
        android:text="Exit"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DetailedView" />

</androidx.constraintlayout.widget.ConstraintLayout>