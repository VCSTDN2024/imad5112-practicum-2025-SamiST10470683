<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list"
    android:gravity="center"
    tools:context=".DetailedViewScreen">

    <TextView
        android:id="@+id/DetailedScreenTitle"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:text="Playlist Details"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/DetailedScreenTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ShowPlaylist">

        <TextView
            android:id="@+id/PlaylistDetails"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_lightitalic"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="#9CFFFFFF"
            android:text=""
            android:textSize="16sp"
            android:layout_marginLeft="25dp"/>
    </ScrollView>

    <Button
        android:id="@+id/ShowPlaylist"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#25000000"
        android:fontFamily="@font/poppins_extralight"
        android:text="Show Playlist"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/CalculateAverage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/CalculateAverage"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#25000000"
        android:fontFamily="@font/poppins_extralight"
        android:text="Calculate Average Rating"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/ReturnToMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ReturnToMain"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#25000000"
        android:fontFamily="@font/poppins_extralight"
        android:text="Return"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>